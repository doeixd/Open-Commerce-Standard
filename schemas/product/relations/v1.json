{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "array",
  "description": "Schema for defining relationships to other products (dev.ocp.product.relations@1.0).",
  "items": {
    "type": "object",
    "properties": {
      "relationType": {
        "type": "string",
        "enum": ["recommendation", "accessory", "alternative"],
        "description": "The type of relationship. 'recommendation' for 'You might also like', 'accessory' for required/optional add-ons, 'alternative' for similar products."
      },
      "productSummary": {
        "type": "object",
        "properties": {
          "id": { "type": "string" },
          "name": { "type": "string" },
          "price": {
            "type": "object",
            "properties": {
              "amount": { "type": "string" },
              "currency": { "type": "string" }
            },
            "required": ["amount", "currency"]
          },
          "thumbnailUrl": { "type": "string", "format": "uri" },
          "href": { "type": "string", "format": "uri", "description": "A direct link to the full CatalogItem resource." }
        },
        "required": ["id", "name", "price", "href"]
      }
    },
    "required": ["relationType", "productSummary"]
  }
}