{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.OCP.dev/order/actions/rating_request/v1.json",
  "title": "Add Rating Request",
  "description": "Request schema for adding a rating to a completed order",
  "type": "object",
  "properties": {
    "overall": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Overall rating from 1-5 stars"
    },
    "food": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Food quality rating (for restaurant orders)"
    },
    "delivery": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Delivery service rating"
    },
    "packaging": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "Packaging quality rating"
    },
    "comment": {
      "type": "string",
      "maxLength": 1000,
      "description": "Optional written review"
    },
    "wouldRecommend": {
      "type": "boolean",
      "description": "Whether the customer would recommend to others"
    }
  },
  "required": ["overall"],
  "additionalProperties": false,
  "examples": [
    {
      "overall": 5,
      "food": 5,
      "delivery": 4,
      "comment": "Great food, slightly late delivery",
      "wouldRecommend": true
    },
    {
      "overall": 3,
      "comment": "Food was cold when it arrived"
    }
  ]
}
