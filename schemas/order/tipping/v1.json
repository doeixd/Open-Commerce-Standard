{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "Schema for order tipping (dev.ocp.order.tipping_and_ratings@1.0)",
  "properties": {
    "tip": {
      "$ref": "#/$defs/Money",
      "description": "Tip amount included in the order."
    }
  },
  "$defs": {
    "Money": {
      "type": "object",
      "properties": {
        "amount": {
          "type": "string",
          "description": "Monetary amount as string (e.g., '5.00')"
        },
        "currency": {
          "type": "string",
          "description": "ISO 4217 currency code (e.g., 'USD')"
        }
      },
      "required": ["amount", "currency"]
    }
  }
}
