{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "description": "Schema for a Return object (dev.ocs.order.returns@1.0).",
  "properties": {
    "id": { "type": "string", "format": "uuid", "description": "The unique identifier for this return." },
    "originalOrderId": { "type": "string", "format": "uuid" },
    "status": {
      "type": "string",
      "enum": ["requested", "approved", "rejected", "in_transit", "received", "processed", "completed"],
      "description": "The current status of the return workflow."
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "cartItemId": { "type": "string", "description": "The ID of the item from the original order." },
          "quantity": { "type": "integer" }
        }
      }
    },
    "reason": { "type": "string", "description": "The reason the user provided for the return." },
    "returnLabelUrl": { "type": "string", "format": "uri", "description": "A URL to a printable shipping label for the user." },
    "createdAt": { "type": "string", "format": "date-time" },
    "updatedAt": { "type": "string", "format": "date-time" }
  },
  "required": ["id", "originalOrderId", "status", "items", "createdAt", "updatedAt"]
}