{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.ocs.dev/errors/stale-version/v1.json",
  "title": "Stale Version Error",
  "description": "RFC 9457 Problem Details for a 409 Conflict error when a client attempts to modify a resource version that has already been superseded.",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "format": "uri",
      "const": "https://schemas.ocs.dev/errors/stale-version"
    },
    "title": {
      "type": "string",
      "const": "Stale Version"
    },
    "status": {
      "type": "integer",
      "const": 409
    },
    "detail": {
      "type": "string"
    },
    "instance": {
      "type": "string",
      "format": "uri"
    },
    "latestVersionUrl": {
      "type": "string",
      "format": "uri",
      "description": "The URL of the latest version of the resource that the client should fetch."
    }
  },
  "required": ["type", "title", "status", "detail", "latestVersionUrl"]
}